<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xm.service.dao.fmcs.PCWDataDAO" >

    <select id="queryPCWData" resultType="com.xm.service.apiimpl.pc.fmcs.pcw.dto.PcwEquipmentData" parameterType="Map">
        select
            KEY as key,
            VAL as val,
            KEYDESC as keyDesc,
            DATATYPE as dataType,
            DEMODATA as demoData,
            DATADATE as dataDate,
            UNIT as unit
        from PCWDATA
    </select>

    <!--根据key查询-->
    <select id="queryStatusByKey" parameterType="map" resultType="com.xm.service.apiimpl.pc.fmcs.pcw.dto.PcwEquipmentData">
        select
            KEY as key,
            VAL as val,
            KEYDESC as keyDesc,
            DATATYPE as dataType,
            DEMODATA as demoData,
            DATADATE as dataDate
        from PCWDATA
        WHERE
            KEY=#{key}
    </select>

    <update id="updateStatusData" parameterType="com.xm.service.apiimpl.pc.fmcs.pcw.dto.PcwEquipmentData">
        UPDATE PCWDATA
            SET PCWDATA.KEY=#{key},
            PCWDATA.VAL=#{val},
            DATADATE=sysdate
        WHERE
          PCWDATA.KEY=#{key}
    </update>

    <insert id="insertStatusData" parameterType="com.xm.service.apiimpl.pc.fmcs.pcw.dto.PcwEquipmentData">
        INSERT INTO PCWDATA(KEY,VAL,DATADATE) VALUES (#{key},#{val},sysdate)
    </insert>

</mapper>